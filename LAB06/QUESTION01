include <stdio.h>

int main() {
    int n, rem, i;
    int sum = 0;
    printf("enter any number\n");
    scanf("%d",&n);
    for(i=0;i<n;i++){
    rem = n % i;
    if(rem==0){
    sum = sum+i;
    }
    }
    if (sum==n)
    printf("%d is a perfect number",sum );
    else
    printf("\n%d is not a perfect number",sum);
    return 0;
}
